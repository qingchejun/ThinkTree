# ThinkTree 生产环境配置
# 请根据实际部署环境修改以下配置

# Google Gemini API 配置
GEMINI_API_KEY=your_production_api_key_here

# 数据库配置
DATABASE_URL=sqlite:///./thinktree.db
# 或使用 PostgreSQL: postgresql://username:password@host:port/database

# JWT 配置
SECRET_KEY=your_secure_production_secret_key_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 前端配置
NEXT_PUBLIC_API_URL=https://your-backend-domain.com

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# 部署配置
PORT=8000
NODE_ENV=production
DEBUG=false